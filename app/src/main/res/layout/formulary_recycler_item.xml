<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/formulary_recycler_item_vertical_guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/formulary_recycler_item_vertical_guide_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/formulary_recycler_item_vertical_guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/formulary_recycler_item_vertical_guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/formulary_recycler_item_vertical_guide4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/formulary_recycler_item_horizontal_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>

    <ImageView
        android:id="@+id/formulary_recycler_item_man_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/nav_header_photo_frame"
        android:src="@drawable/ic_man_logo"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0.1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/formulary_recycler_item_vertical_guide2"
        app:layout_constraintStart_toStartOf="@+id/formulary_recycler_item_vertical_guide1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/formulary_recycler_item_woman_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        android:background="@drawable/nav_header_photo_frame_pink"
        android:src="@drawable/ic_woman_logo"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0.1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/formulary_recycler_item_vertical_guide4"
        app:layout_constraintStart_toStartOf="@+id/formulary_recycler_item_vertical_guide3"
        app:layout_constraintTop_toTopOf="@+id/formulary_recycler_item_man_logo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/NAME"
        app:layout_constraintBottom_toBottomOf="@+id/formulary_recycler_name"
        app:layout_constraintEnd_toStartOf="@+id/formulary_recycler_item_vertical_guide_text"
        app:layout_constraintTop_toTopOf="@+id/formulary_recycler_name" />

    <ImageView
        android:id="@+id/formulary_recycler_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/formulary_recycler_item_woman_logo"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="@+id/formulary_recycler_name"
        app:layout_constraintTop_toTopOf="@+id/formulary_recycler_item_horizontal_guide" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/FORNAME"
        app:layout_constraintBottom_toBottomOf="@+id/formulary_recycler_forname"
        app:layout_constraintEnd_toStartOf="@+id/formulary_recycler_item_vertical_guide_text"
        app:layout_constraintTop_toTopOf="@+id/formulary_recycler_forname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/formulary_class"
        app:layout_constraintBottom_toBottomOf="@+id/formulary_recycler_classe"
        app:layout_constraintEnd_toStartOf="@+id/formulary_recycler_item_vertical_guide_text"
        app:layout_constraintTop_toTopOf="@+id/formulary_recycler_classe" />

    <EditText
        android:id="@+id/formulary_recycler_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/formulary_recycler_item_vertical_guide_text"
        app:layout_constraintTop_toBottomOf="@+id/formulary_recycler_item_man_logo" />

    <EditText
        android:id="@+id/formulary_recycler_forname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/formulary_recycler_item_vertical_guide_text"
        app:layout_constraintTop_toBottomOf="@+id/formulary_recycler_name" />

    <EditText
        android:id="@+id/formulary_recycler_classe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/formulary_recycler_item_vertical_guide_text"
        app:layout_constraintTop_toBottomOf="@+id/formulary_recycler_forname" />

</androidx.constraintlayout.widget.ConstraintLayout>