<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/margin_small"
    app:cardCornerRadius="@dimen/margin_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/news_creator_edition_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/news_creator_edition_photo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/news_creator_edition_event_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="DATE :"
            app:layout_constraintStart_toStartOf="@+id/news_creator_edition_title"
            app:layout_constraintTop_toBottomOf="@+id/news_creator_edition_title" />

        <TextView
            android:id="@+id/news_creator_edition_publication_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="01/01/2019"
            app:layout_constraintStart_toEndOf="@+id/news_creator_edition_publication_title"
            app:layout_constraintTop_toBottomOf="@+id/news_creator_edition_event_date_title" />

        <TextView
            android:id="@+id/news_creator_edition_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/news_creator_edition_publication_date" />

        <ImageView
            android:id="@+id/news_creator_edition_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/news_creator_edition_body"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/news_creator_edition_title"
            app:srcCompat="@drawable/avd_anim_epfd" />

        <TextView
            android:id="@+id/news_creator_edition_publication_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="PUBLICATION :"
            app:layout_constraintStart_toStartOf="@+id/news_creator_edition_event_date_title"
            app:layout_constraintTop_toBottomOf="@+id/news_creator_edition_event_date_title" />

        <TextView
            android:id="@+id/news_creator_edition_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="01/01/2019"
            app:layout_constraintStart_toEndOf="@+id/news_creator_edition_event_date_title"
            app:layout_constraintTop_toTopOf="@+id/news_creator_edition_event_date_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>